package com.example.googledrive.dto;

import lombok.*;
import com.example.googledrive.model.Folder;

@Getter
@Setter
@Builder
@AllArgsConstructor
@NoArgsConstructor
public class FolderDTO {
    private int id;
    private String Name;
    private int parentId;
    private int ownerId;
    private String path;
    private String status;
    private int size;
    private String createdAt;
    private String updatedAt;

    public FolderDTO(Folder folder) {
        this.id = folder.getId();
        this.Name = folder.getName();
        this.parentId = folder.getParentId();
        this.ownerId = folder.getOwnerId();
        this.path = folder.getPath();
        this.status = folder.getStatus();
        this.size = folder.getSize();
        this.createdAt = folder.getCreatedAt() != null ? folder.getCreatedAt().toString() : null;
        this.updatedAt = folder.getUpdatedAt() != null ? folder.getUpdatedAt().toString() : null;
    }
        
}
